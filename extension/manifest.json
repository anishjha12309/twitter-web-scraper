{
  "manifest_version": 3,
  "name": "Twitter Cookie Sync",
  "version": "1.0.0",
  "description": "Syncs Twitter cookies to your scraper backend",
  "permissions": [
    "cookies",
    "storage"
  ],
  "host_permissions": [
    "https://twitter.com/*",
    "https://x.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }
}
